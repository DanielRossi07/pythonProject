<Registration>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50,10,50]
        spacing: 50

        Label:
            text: 'Registration'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Username'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: username
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password Confirmation'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password_confirmation
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Register'
            font_size: 24

            on_press: root.do_register(login.text, password.text, password_confirmation.text)
